<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SearchAllCoursesServlet</servlet-name>
        <servlet-class>fr.utbm.gestion_de_formations_en_ligne.servlet.SearchAllCoursesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchAllCoursesKeyWordServlet</servlet-name>
        <servlet-class>fr.utbm.gestion_de_formations_en_ligne.servlet.SearchAllCoursesKeyWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchAllCoursesAtLocationServlet</servlet-name>
        <servlet-class>fr.utbm.gestion_de_formations_en_ligne.servlet.SearchAllCoursesAtLocationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchAllCoursesAtDateServlet</servlet-name>
        <servlet-class>fr.utbm.gestion_de_formations_en_ligne.servlet.SearchAllCoursesAtDateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchAllLocationsServlet</servlet-name>
        <servlet-class>fr.utbm.gestion_de_formations_en_ligne.servlet.SearchAllLocationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClientServlet</servlet-name>
        <servlet-class>fr.utbm.gestion_de_formations_en_ligne.servlet.AddClientServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SearchAllCoursesServlet</servlet-name>
        <url-pattern>/Courses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchAllCoursesKeyWordServlet</servlet-name>
        <url-pattern>/CoursesKeyWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchAllCoursesAtLocationServlet</servlet-name>
        <url-pattern>/CoursesAtLocation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchAllCoursesAtDateServlet</servlet-name>
        <url-pattern>/CoursesAtDate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchAllLocationsServlet</servlet-name>
        <url-pattern>/AllLocations</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>AddClientServlet</servlet-name>
        <url-pattern>/AddClient</url-pattern>
    </servlet-mapping>
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
