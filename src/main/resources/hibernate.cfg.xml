<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">oracle</property>
    <property name="hibernate.connection.password">oracle</property>
    <property name="hbm2ddl.auto">update</property>
    <mapping resource="fr/utbm/gestion_de_formations_en_ligne/entity/Client.hbm.xml"/>
    <mapping resource="fr/utbm/gestion_de_formations_en_ligne/entity/Course.hbm.xml"/>
    <mapping resource="fr/utbm/gestion_de_formations_en_ligne/entity/Location.hbm.xml"/>
    <mapping resource="fr/utbm/gestion_de_formations_en_ligne/entity/CourseSession.hbm.xml"/>
    <mapping resource="fr/utbm/gestion_de_formations_en_ligne/entity/Log.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
